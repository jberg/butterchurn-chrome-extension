{
  "name": "Butterchurn Music Visualizer Extension",
  "short_name": "Butterchurn Visualizer",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Visualizes the audio playing using the MilkDrop 2 visualizer",
  "homepage_url": "https://butterchurnviz.com/extension",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png",
      "512": "icons/icon512.png"
    },
    "default_title": "Butterchurn Visualizer"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab"
  ],
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
