{
  "name": "Butterchurn Music Visualizer Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension visualizes the audio playing in a tab using the MilkDrop 2 visualizer",
  "homepage_url": "https://butterchurnviz.com/extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Start Visualizer"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "<all_urls>"
  ]
}
