{
  "name": "Butterchurn Music Visualizer Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Visualizes the audio playing using the MilkDrop 2 visualizer",
  "homepage_url": "https://butterchurnviz.com/extension",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png",
      "512": "icons/icon512.png"
    },
    "default_title": "Start Visualizer"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "<all_urls>"
  ]
}
